import org.junit.Test;
import static org.junit.Assert.*;

public class CalcTests extends StringCalculator{

    @Test
    public void testAdd() {
	//tests an empty string
        int result = emptyString.Add("");
        assertEquals(0, result);
	
	//tests one number
	//single digit
	result = emptyString.Add("3");
        assertEquals(3, result);
	//double digit
	result = emptyString.Add("31");
        assertEquals(31, result);
	
	//tests two numbers
	result = emptyString.Add("3,3");
        assertEquals(6, result);
	//double digits
	result = emptyString.Add("13,31");
        assertEquals(44, result);
	
	//test three numbers
	result = emptyString.Add("1,2,3");
        assertEquals(6, result);
    }
}
